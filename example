<script>
  // Mock data (replace later with your API fetch)
  const DATA = {
    meta: {
      weekLabel: "3–7 febrero 2026",
      lastUpdated: "jueves, 5 febrero 2026"
    },
    groups: [
      {
        id: "inf-3-5",
        level: "infantil",
        name: "Infantil (3–5)",
        schedule: "L/M 17:00",
        teacher: "Teacher A",
        focus: ["Songs", "Movement", "Storytime"],
        items: [
          { type: "vocab", objective: "Colours (red/blue/green)", examples: "It’s red. / What colour is it?", status: "introducido", date: "03/02" },
          { type: "speaking", objective: "Classroom routine phrases", examples: "Can I go to the toilet? / I’m finished!", status: "practicando", date: "04/02" },
          { type: "listening", objective: "Follow simple instructions", examples: "Stand up / Sit down / Touch your nose", status: "practicando", date: "05/02" }
        ],
        lessons: [
          { date: "05/02", teacher: "Teacher A", notes: "Songs + colours + routine.", taught: ["Colours (red/blue/green)", "Classroom routine phrases"] },
          { date: "03/02", teacher: "Teacher A", notes: "Storytime + instructions.", taught: ["Follow simple instructions"] }
        ]
      },
      {
        id: "pri-6-8",
        level: "primaria",
        name: "Primaria (6–8)",
        schedule: "M/J 16:00",
        teacher: "Teacher B",
        focus: ["Speaking games", "Vocabulary building", "Clear correction"],
        items: [
          { type: "grammar", objective: "Present simple (he/she)", examples: "He plays. / She doesn’t like…", status: "practicando", date: "04/02" },
          { type: "vocab", objective: "Daily routines", examples: "wake up, have breakfast, go to school", status: "introducido", date: "04/02" },
          { type: "speaking", objective: "Ask & answer about routines", examples: "What time do you…? / I… at…", status: "practicando", date: "06/02" }
        ],
        lessons: [
          { date: "06/02", teacher: "Teacher B", notes: "Speaking chain practice + correction.", taught: ["Ask & answer about routines"] },
          { date: "04/02", teacher: "Teacher B", notes: "New routine vocab + present simple he/she.", taught: ["Daily routines", "Present simple (he/she)"] }
        ]
      },
      {
        id: "sec-b1",
        level: "secundaria",
        name: "B1 Teens",
        schedule: "M/J 18:00",
        teacher: "Mark",
        focus: ["Exam skills", "Speaking confidence", "Useful grammar"],
        items: [
          { type: "grammar", objective: "Past simple vs present perfect", examples: "I went… / I’ve been…", status: "practicando", date: "03/02" },
          { type: "writing", objective: "Writing an informal email", examples: "Hi…, Thanks for…, Looking forward to…", status: "introducido", date: "05/02" },
          { type: "speaking", objective: "Photo description (B1)", examples: "In the foreground… / It looks like…", status: "practicando", date: "06/02" },
          { type: "vocab", objective: "Travel problems", examples: "delay, lost luggage, refund, complain", status: "dominando", date: "06/02" }
        ],
        lessons: [
          { date: "06/02", teacher: "Mark", notes: "Speaking: photo + travel problems.", taught: ["Photo description (B1)", "Travel problems"] },
          { date: "05/02", teacher: "Mark", notes: "Writing: informal email structure.", taught: ["Writing an informal email"] },
          { date: "03/02", teacher: "Mark", notes: "Grammar: past vs present perfect.", taught: ["Past simple vs present perfect"] }
        ]
      }
    ]
  };

  const els = {
    weekLabel: document.getElementById("weekLabel"),
    lastUpdated: document.getElementById("lastUpdated"),
    levelFilter: document.getElementById("levelFilter"),
    groupFilter: document.getElementById("groupFilter"),
    typeFilter: document.getElementById("typeFilter"),
    searchBox: document.getElementById("searchBox"),
    groupCards: document.getElementById("groupCards"),
    groupDetail: document.getElementById("groupDetail"),
    groupTitle: document.getElementById("groupTitle"),
    groupMeta: document.getElementById("groupMeta"),
    lessonFeed: document.getElementById("lessonFeed"),
    objectiveGrid: document.getElementById("objectiveGrid"),
    teachTableBody: document.getElementById("teachTableBody"),
    closeGroup: document.getElementById("closeGroup")
  };

  const STATUS = {
    "introducido": { label: "Introducido", dot: "dot--grey", badge: "badge--grey" },
    "practicando": { label: "Practicando", dot: "dot--amber", badge: "badge--amber" },
    "dominando": { label: "Dominado", dot: "dot--green", badge: "badge--green" }
  };

  function typeLabel(type) {
    return {
      vocab: "Vocabulario",
      grammar: "Gramática",
      writing: "Writing",
      speaking: "Speaking",
      listening: "Listening",
      reading: "Reading"
    }[type] || type;
  }

  function escapeHtml(s) {
    return (s || "").replace(/[&<>"']/g, c => ({
      "&":"&amp;","<":"&lt;",">":"&gt;",'"':"&quot;","'":"&#039;"
    }[c]));
  }

  function currentFilters() {
    return {
      level: els.levelFilter.value,
      group: els.groupFilter.value,
      type: els.typeFilter.value,
      q: (els.searchBox.value || "").trim().toLowerCase()
    };
  }

  function filteredGroups() {
    const f = currentFilters();
    return DATA.groups.filter(g => {
      if (f.level !== "all" && g.level !== f.level) return false;
      if (f.group !== "all" && g.id !== f.group) return false;
      if (!f.q && f.type === "all") return true;

      const hay = (g.name + " " + g.schedule + " " + g.teacher).toLowerCase();
      const items = g.items || [];
      const matchesQ = !f.q ? true : (
        hay.includes(f.q) ||
        items.some(it =>
          (it.objective || "").toLowerCase().includes(f.q) ||
          (it.examples || "").toLowerCase().includes(f.q)
        )
      );

      const matchesType = (f.type === "all") ? true : items.some(it => it.type === f.type);

      return matchesQ && matchesType;
    });
  }

  function renderGroupCards() {
    const groups = filteredGroups();
    els.groupCards.innerHTML = groups.map(g => `
      <div class="card">
        <h3>${escapeHtml(g.name)}</h3>
        <p class="meta">${escapeHtml(g.schedule)} · ${escapeHtml(g.teacher)}</p>

        <div class="chips">
          ${(g.focus || []).slice(0,3).map(x => `<span class="chip">${escapeHtml(x)}</span>`).join("")}
        </div>

        <div class="card-actions">
          <a class="link" href="#groupDetail" data-open="${escapeHtml(g.id)}">Ver detalle →</a>
          <button type="button" data-open="${escapeHtml(g.id)}">Abrir</button>
        </div>
      </div>
    `).join("");

    // populate groupFilter options once (or refresh)
    const allGroups = DATA.groups;
    const opts = ["<option value='all'>Todos</option>"].concat(
      allGroups
        .filter(g => (els.levelFilter.value === "all" ? true : g.level === els.levelFilter.value))
        .map(g => `<option value="${escapeHtml(g.id)}">${escapeHtml(g.name)}</option>`)
    );
    els.groupFilter.innerHTML = opts.join("");
  }

  function renderGroupDetail(groupId) {
    const g = DATA.groups.find(x => x.id === groupId);
    if (!g) return;

    els.groupTitle.textContent = g.name;
    els.groupMeta.textContent = `${g.schedule} · Profesor/a: ${g.teacher}`;

    // lesson feed
    els.lessonFeed.innerHTML = (g.lessons || []).map(lsn => `
      <div class="timeline-item">
        <div class="top">
          <span class="date">${escapeHtml(lsn.date)}</span>
          <span class="teacher">${escapeHtml(lsn.teacher)}</span>
        </div>
        <div class="muted">${escapeHtml(lsn.notes || "")}</div>
        <ul>
          ${(lsn.taught || []).map(x => `<li>${escapeHtml(x)}</li>`).join("")}
        </ul>
      </div>
    `).join("");

    // objective cards (top priorities)
    const top = (g.items || []).slice(0, 6);
    els.objectiveGrid.innerHTML = top.map(it => {
      const st = STATUS[it.status] || STATUS.introducido;
      return `
        <div class="objective">
          <div class="row">
            <strong>${escapeHtml(it.objective)}</strong>
            <span class="badge ${st.badge}">${st.label}</span>
          </div>
          <div class="muted"><strong>${typeLabel(it.type)}:</strong> ${escapeHtml(it.examples || "—")}</div>
        </div>
      `;
    }).join("");

    // table
    const f = currentFilters();
    const items = (g.items || []).filter(it => {
      if (f.type !== "all" && it.type !== f.type) return false;
      if (f.q) {
        const hay = ((it.objective || "") + " " + (it.examples || "")).toLowerCase();
        if (!hay.includes(f.q)) return false;
      }
      return true;
    });

    els.teachTableBody.innerHTML = items.map(it => {
      const st = STATUS[it.status] || STATUS.introducido;
      return `
        <tr>
          <td>${escapeHtml(typeLabel(it.type))}</td>
          <td><strong>${escapeHtml(it.objective)}</strong></td>
          <td class="muted">${escapeHtml(it.examples || "—")}</td>
          <td>
            <span class="status-dot">
              <span class="dot ${st.dot}" aria-hidden="true"></span>
              ${st.label}
            </span>
          </td>
          <td class="muted">${escapeHtml(it.date || "—")}</td>
        </tr>
      `;
    }).join("");

    els.groupDetail.hidden = false;
  }

  function wireEvents() {
    document.addEventListener("click", (e) => {
      const open = e.target.closest("[data-open]");
      if (open) {
        e.preventDefault();
        renderGroupDetail(open.getAttribute("data-open"));
        location.hash = "#groupDetail";
        return;
      }
    });

    els.closeGroup.addEventListener("click", () => {
      els.groupDetail.hidden = true;
      location.hash = "#grupos";
    });

    [els.levelFilter, els.groupFilter, els.typeFilter].forEach(el => {
      el.addEventListener("change", () => {
        // If a specific group is selected, open it automatically
        renderGroupCards();
        const f = currentFilters();
        if (f.group !== "all") renderGroupDetail(f.group);
        else if (!els.groupDetail.hidden) {
          // If detail is open, keep it updated
          const current = DATA.groups.find(g => g.name === els.groupTitle.textContent);
          if (current) renderGroupDetail(current.id);
        } 
      });
    });

    els.searchBox.addEventListener("input", () => {
      renderGroupCards();
      if (!els.groupDetail.hidden) {
        const current = DATA.groups.find(g => g.name === els.groupTitle.textContent);
        if (current) renderGroupDetail(current.id);
      }
    });
  }

  // init
  els.weekLabel.textContent = DATA.meta.weekLabel;
  els.lastUpdated.textContent = DATA.meta.lastUpdated;

  renderGroupCards();
  wireEvents();
</script>
